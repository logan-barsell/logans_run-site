# ========================================
# LOGAN'S RUN - ENVIRONMENT VARIABLES
# ========================================
# Copy this file to .env and fill in your values
# NEVER commit .env files to version control!

# ========================================
# CRITICAL SECURITY VARIABLES
# ========================================

# JWT Secret (REQUIRED - Generate a strong random string)
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-super-secure-jwt-secret-here-minimum-64-characters

# ========================================
# DATABASE CONFIGURATION
# ========================================

# MongoDB Connection String
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/database

# ========================================
# ADMIN USER CONFIGURATION
# ========================================

# Admin Email (optional - defaults to admin@logansrun.com)
ADMIN_EMAIL=admin@yourdomain.com

# Default Admin Password (optional - defaults to LogansRun2024!)
# Change this immediately after first login!
DEFAULT_ADMIN_PASSWORD=YourSecurePassword123!

# ========================================
# STRIPE CONFIGURATION (if using Stripe)
# ========================================

# Stripe Secret Key
STRIPE_SECRET=sk_test_your_stripe_secret_key

# Stripe Redirect Domain
STRIPE_REDIRECT_DOMAIN=https://yourdomain.com

# Stripe Shipping Rate ID
SHIPPING_RATE_ID=shr_your_shipping_rate_id

# ========================================
# SERVER CONFIGURATION
# ========================================

# Server Port (optional - defaults to 5001)
PORT=5001

# Node Environment
NODE_ENV=development

# ========================================
# CLIENT CONFIGURATION
# ========================================

# React App Server Port (optional - defaults to 5001)
REACT_APP_SERVER_PORT=5001

# API Base URL (optional - defaults to /api)
REACT_APP_API_BASE_URL=/api

# Domain for social sharing
REACT_APP_DOMAIN=yourdomain.com

# ========================================
# SECURITY NOTES
# ========================================
# 
# 1. JWT_SECRET must be at least 64 characters long
# 2. Use different secrets for development and production
# 3. Never share or commit your .env file
# 4. Change DEFAULT_ADMIN_PASSWORD after first login
# 5. Use HTTPS in production
# 6. Regularly rotate your secrets
#
# ======================================== 